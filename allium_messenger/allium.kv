BodyLayout:

<BodyLayout@GridLayout>:
    cols: 2
    ScrollPeopleList:
    MessageInput:

<ScrollPeopleList@ScrollView>:
    PeopleList:

<PeopleList>:
    cols: 1
    size_hint: 1, None
    height: self.minimum_height
    spacing: "2dp", "2dp"

<MessageInput>:
    rows: 5
    spacing: "0dp", "10dp"
    padding: ("8dp", "10dp", "8dp", "0dp")
    Label:
        text: "Recipient Tor Identifier:"
        size_hint: .5, None
        size: 0, "20dp"
        text_size: self.size
        halign: "left"
        valign: "top"
    TextInput:
        id: tor_identifier
        size_hint: .5, None
        size: 0, "30dp"
        multiline: False
        cursor_color: 0, 0, 0, 1
    Label:
        text: "Message:"
        size_hint: .5, None
        size: 0, "20dp"
        text_size: self.size
        halign: "left"
        valign: "top"
    TextInput:
        id: message
        size_hint: .5, None
        size: 0, "330dp"
        cursor_color: 0, 0, 0, 1
    Button:
        text: "Send"
        size_hint: .5, None
        size: 0, "53dp"
        on_press: root.send_message()

<NewPerson>:
    rows: 5
    size_hint: None, None
    size: "300dp", "290dp"
    padding: ("7dp", "75dp", "0dp", "0dp")
    spacing: "0dp", "15dp"
    Label:
        text: "Person Name:"
        size_hint: 1, None
        size: 0, "15dp"
        text_size: self.size
        halign: "left"
        valign: "top"
    TextInput:
        id: new_person_name
        size_hint: 1, None
        size: 0, "30dp"
        multiline: False
        cursor_color: 0, 0, 0, 1
    Label:
        text: "Person Tor Identifier:"
        size_hint: 1, None
        size: 0, "15dp"
        text_size: self.size
        halign: "left"
        valign: "top"
    TextInput:
        id: new_person_identifier
        size_hint: 1, None
        size: 0, "30dp"
        multiline: False
        cursor_color: 0, 0, 0, 1
    Button:
        text: "Confirm"
        size_hint: 1, None
        size: 0, "53dp"
        on_press: root.confirm_person()

<DeletePerson>:
    rows: 5
    size_hint: None, None
    size: "300dp", "290dp"
    padding: ("7dp", "75dp", "0dp", "0dp")
    spacing: "0dp", "15dp"
    Label:
        text: "Person Name:"
        size_hint: 1, None
        size: 0, "15dp"
        text_size: self.size
        halign: "left"
        valign: "top"
    TextInput:
        id: delete_person_name
        size_hint: 1, None
        size: 0, "30dp"
        multiline: False
        cursor_color: 0, 0, 0, 1
    Label:
        text: "Person Tor Identifier:"
        size_hint: 1, None
        size: 0, "15dp"
        text_size: self.size
        halign: "left"
        valign: "top"
    TextInput:
        id: delete_person_identifier
        size_hint: 1, None
        size: 0, "30dp"
        multiline: False
        cursor_color: 0, 0, 0, 1
    Button:
        text: "Confirm"
        size_hint: 1, None
        size: 0, "53dp"
        on_press: root.confirm_delete()
